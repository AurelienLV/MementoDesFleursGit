<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/layoutEpreuve"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aurelienlv.mementodesfleurs.EpreuveActivity"
    android:background="@drawable/background2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:maxHeight="400dp"
        android:maxWidth="400dp"
        android:minHeight="400dp"
        android:minWidth="400dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quelle est cette plante ?"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:nextFocusDown="@+id/editText2"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:maxLength="30"
        android:minWidth="200dp"
        android:background="#ffffff"
        android:maxHeight="20dp"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:minHeight="20dp"
        android:minLines="1"
        android:textSize="30dp"
        android:focusable="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:nextFocusDown="@+id/editText3"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:maxLength="30"
        android:minWidth="200dp"
        android:background="#ffffff"
        android:maxHeight="20dp"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:minHeight="20dp"
        android:minLines="1"
        android:textSize="30dp"
        android:focusable="true"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentEnd="true" />

    <EditText
        android:nextFocusDown="@+id/button3"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:maxLength="30"
        android:minWidth="200dp"
        android:background="#ffffff"
        android:maxHeight="20dp"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:minHeight="20dp"
        android:minLines="1"
        android:nestedScrollingEnabled="false"
        android:textSize="30dp"
        android:focusable="true"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom commun"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom Botanique"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Famille"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soumettre"
        android:id="@+id/button3"
        android:elegantTextHeight="false"
        android:onClick="sendMessage"
        android:singleLine="true"
        android:textSize="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView5"
        android:textColor="#ffffffff" />

</RelativeLayout>
